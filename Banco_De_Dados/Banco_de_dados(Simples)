-- Criação da tabela de clientes
CREATE TABLE Clientes (
    ClienteID INT PRIMARY KEY AUTO_INCREMENT,
    Nome VARCHAR(50),
    Sobrenome VARCHAR(50),
    Email VARCHAR(100) UNIQUE,
    Telefone VARCHAR(20),
    Senha VARCHAR(100),
    CEP VARCHAR(10),
    Endereco VARCHAR(255)
);

-- Criação da tabela de anunciantes
CREATE TABLE Anunciantes (
    AnuncianteID INT PRIMARY KEY AUTO_INCREMENT,
    Nome VARCHAR(50),
    Sobrenome VARCHAR(50),
    Email VARCHAR(100) UNIQUE,
    Telefone VARCHAR(20),
    Senha VARCHAR(100),
    CEP VARCHAR(10),
    Endereco VARCHAR(255),
    CNPJ_MEI VARCHAR(20),
    PorteEmpresa ENUM('Pequena', 'Média', 'Grande'),
    TipoServico VARCHAR(100),
    PlanoAssinatura ENUM('Básico', 'Premium', 'VIP')
);

-- Criação da tabela de viagens
CREATE TABLE Viagens (
    ViagemID INT PRIMARY KEY AUTO_INCREMENT,
    Nome VARCHAR(255),
    Imagem VARCHAR(255),
    Preco DECIMAL(10, 2),
    DataInicio DATE,
    HorarioSaida TIME,
    VagasDisponiveis INT,
    Categoria ENUM('Aventura', 'Cultural', 'Ecoturismo', 'Praia', 'Montanha', 'Cruzeiro'),
    Transporte VARCHAR(100),
    Alojamento VARCHAR(100),
    AtracoesAtividades TEXT,
    RequisitosDocumentacao TEXT,
    Descricao TEXT,
    AnuncianteID INT,
    FOREIGN KEY (AnuncianteID) REFERENCES Anunciantes(AnuncianteID)
);
